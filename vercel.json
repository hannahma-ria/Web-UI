{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/reddit-posts",
      "dest": "/server.js"
    },
    {
      "src": "/api/predict",
      "dest": "/server.js"
    },
    {
      "src": "/api/reset",
      "dest": "/server.js"
    },
    {
      "src": "/api/layout",
      "dest": "/server.js"
    },
    {
      "src": "/chat",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1",
      "headers": {
        "Cache-Control": "s-maxage=0"
      }
    }
  ]
}